{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "typeRoots": ["custom_types", "node_modules/@types"],
    "outDir": "dist"
  }
}